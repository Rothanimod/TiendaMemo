
<div class="container" id="productsContainer">
  <div class="row">
    <div class="col-md-2">
      <h3 class= "text-center">Categorias</h3>
      <ul class="list-group">
        <%@categories.each do |category|%>
        <li class="list-group-item"><%= link_to category.name, root_path(category_id: category.id ) %></li>
        <%end%>
      </ul>
    </div>

    <div class="col-md-10">
      <%if @products.size > 0 %>
        <% @products.each do |product|%>
          <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <img src="http://fakeimg.pl/242x200/" alt="...">
                <div class="caption">
                  <h3><%=product.name%> </h3>
                  <p class="description"><%=product.description %></p>
                  <p><%= link_to 'Comprar', '#', class: 'btn btn-primary' %></p>
                </div>
              </div>
          </div>
        <%end%>
        <%else%>
        <h2 class="text-center">Esta categoria no tiene productos relacionados</h2>
      <%end%>

    </div>
  </div>
</div>
