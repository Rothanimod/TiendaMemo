<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Panel de Administracion</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-hover table-condensed">
        <thead>
          <th>usuario</th>
          <th>Compras pedientes</th>
          <th>Compras pagadas</th>
          <th>Opciones</th>
        </thead>
        <tbody>
          <% @users.each do |user|%>
            <tr>
              <td><%= user.email %></td>
              <td><%= Purchase.number_of_purchases(user, 'pending') %></td>
              <td><%= Purchase.number_of_purchases(user, 'paid')%></td>
              <td><%= purchase.created_at.strftime("Comprado el %d de %B de %Y")%></td>
              <td class="danger"><%= purchase.status.humanize%></td>
            </tr>
          <%end%>

          <% @paid_purchases.each do |purchase|%>
            <tr>
              <td><%= image_tag purchase.product.image.url(:micro_thumb) %></td>
              <td><%= purchase.product.name%></td>
              <td><%= purchase.price%></td>
              <td><%= purchase.created_at.strftime("Comprado el %d de %B de %Y")%></td>
              <td class="success"><%= purchase.status.humanize%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
